datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
 
generator client {
  provider = "prisma-client-js"
}
 
model User {
  id      String       @id @default(cuid())
  sessions Session[]
}

model Session {
  id        String   @id
  userId    String
  expiresAt DateTime

  user      User     @relation(references: [id], fields: [userId], onDelete: Cascade)
}

model MagicToken {
	id        String   @id @default(uuid())
	email     String
	token     String   @unique
	expiresAt DateTime
}
