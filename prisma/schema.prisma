datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id         String       @id @default(cuid())
  email      String       @unique
  firstName  String?
  lastName   String?
  sessions   Session[]
}

model Session {
  hashedToken   String   @id
  userId        String
  expiresAt     DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model MagicToken {
  hashedToken  String   @id 
  otp          String
  deviceId     String
  email        String
  expiresAt    DateTime
  createdAt    DateTime @default(now())
}