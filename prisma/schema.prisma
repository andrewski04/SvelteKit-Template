datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id         String       @id @default(cuid())
  email      String       @unique
  firstName  String?
  lastName   String?
  sessions   Session[]
}

model Session {
  id        String   @id
  userId    String
  expiresAt DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model MagicToken {
  token     String   @id
  email     String
  otp       String   // Store the OTP code
  verified  Boolean  @default(false) // Track if magic link was opened
  deviceId  String?  // Store the requesting device ID 
  expiresAt DateTime
}